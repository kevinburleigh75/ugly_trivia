#!/usr/bin/env ruby
$:.unshift(File.dirname(__FILE__) + '/../lib')

require 'ugly_trivia/game'

game = UglyTrivia::Game.new

game.add 'Chet'
game.add 'Pat'
game.add 'Sue'

loop do
  game.roll(rand(5) + 1)

  should_continue_game =
    if rand(9) == 7
      game.wrong_answer
    else
      game.was_correctly_answered
    end

  break unless should_continue_game
end
